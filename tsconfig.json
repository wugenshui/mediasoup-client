{
	"compileOnSave": true,
	"compilerOptions":
	{
		"downlevelIteration": true,
		// "lib": [ "es5","es2016", "dom" ],
		"target": "es5", //  编译出的代码采用 ES 的哪个版本	
		"module": "commonjs", // 编译出的代码采用的模块规范
		"moduleResolution": "node",
		"noImplicitAny": false,
		"esModuleInterop": true,
		// "isolatedModules": true,
		// "strict": true,
		"outDir": "lib",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true, // 输出 Source Map 方便调试
	}
}
